{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["./types", "vite/client", "node"],
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["./src/**/*", "types.d.ts"]
}
